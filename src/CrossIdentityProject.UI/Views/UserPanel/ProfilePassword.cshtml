@using CrossIdentityProject.UI.Models.IdentityViewModels
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "ProfilePassword";
    Layout = "~/Views/Shared/_Panel_Layout.cshtml";
}

<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <div class="text-center font-weight-bold">
                <h4>Kullanıcı Şifre Değiştirme</h4>
            </div>
        </div>
    </div>
</div>

<form asp-controller="UserPanel" asp-action="ProfilePassword" method="post">

    <div class="form-group mt-4">
        <label for="exampleInputPassword1">Eski Şifre</label>
        <input type="password" asp-for="CurrentPassword" class="form-control" id="exampleInputPassword1">
        <small id="emailHelp" class="form-text text-muted">bu alandan eski şifrenizi giriniz</small>
    </div>

    <div class="form-group mt-4">
        <label for="exampleInputPassword1">Yeni Şifre</label>
        <input type="password" asp-for="NewPassword" class="form-control" id="exampleInputPassword1">
        <small id="emailHelp" class="form-text text-muted">bu alandan yeni şifrenizi giriniz</small>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Kaydet</button>
</form>

