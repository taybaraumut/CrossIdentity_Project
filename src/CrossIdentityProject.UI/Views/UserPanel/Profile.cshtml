@using CrossIdentityProject.UI.Models.ProfileModels
@model ProfileModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Panel_Layout.cshtml";
}
<div class="container mt-3">
    <div class="row">
        <div class="col-12">
            <div class="text-center font-weight-bold">
                <h4>Kullanıcı Profil Bilgileri</h4>
            </div>
        </div>
    </div>
</div>

<form asp-controller="UserPanel" asp-action="Profile" method="post">
    <div class="form-group mt-4">
        <input type="hidden" class="form-control" value="@Model.Id" asp-for="Id" id="exampleInputPassword1">
    </div>
    <div class="form-group mt-4">
        <label for="exampleInputPassword1">Ad</label>
        <input type="text" class="form-control" value="@Model.Name" asp-for="Name" id="exampleInputPassword1">
        <small id="emailHelp" class="form-text text-muted">bu alandan adınızı güncelleyebilirsiniz</small>
    </div>
    <div class="form-group mt-4">
        <label for="exampleInputPassword1">Soyad</label>
        <input type="text" class="form-control" value="@Model.Surname" asp-for="Surname" id="exampleInputPassword1">
        <small id="emailHelp" class="form-text text-muted">bu alandan soyad adınızı güncelleyebilirsiniz</small>
    </div>
    <div class="form-group mt-4">
        <label for="exampleInputEmail1">E-Mail Adresi</label>
        <input type="email" class="form-control" value="@Model.Email" asp-for="Email" id="exampleInputEmail1" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">bu alandan email adresinizi güncelleyebilirsiniz</small>
    </div>
    <div class="form-group mt-4">
        <label for="exampleInputPassword1">Kullanıcı Adı</label>
        <input type="text" class="form-control" value = "@Model.UserName" asp-for="UserName" id="exampleInputPassword1">
        <small id="emailHelp" class="form-text text-muted">bu alandan kullanıcı adınızı güncelleyebilirsiniz</small>
    </div>
    <div class="form-group mt-4">
        <label for="exampleInputPassword1">Şehir</label>
        <input type="text" class="form-control" value="@Model.City" asp-for="City" id="exampleInputPassword1">
        <small id="emailHelp" class="form-text text-muted">bu alandan şehirinizi güncelleyebilirsiniz</small>
    </div>
    <div class="form-group mt-4">
        <label for="exampleInputPassword1">İlçe</label>
        <input type="text" class="form-control" value="@Model.District" asp-for="District" id="exampleInputPassword1">
        <small id="emailHelp" class="form-text text-muted">bu alandan ilçenizi güncelleyebilirsiniz</small>
    </div>

    <div class="form-group mt-4">
        <select class="form-select" aria-label="Default select example" asp-for="TwoFactor">

            @if(Model.TwoFactor == true)
            {
                <option selected value="1" >İki Faktörlü Doğrulama Açık</option>
                <option value="false">İki Faktörlü Doğrulama Kapat</option>
            }
            else
            {
                <option selected value="0">İki Faktörlü Doğrulama Kapalı</option>
                <option value="true">İki Faktörlü Doğrulama Aç</option>
            }          
        </select>
        <small id="emailHelp" class="form-text text-muted">bu alandan iki faktörlü doğrulamayı kapatıp açabilirsiniz</small>
    </div>
    
    <button type="submit" class="btn btn-primary mt-4">Kaydet</button>
</form>

