@using CrossIdentityProject.UI.Models.IdentityViewModels
@model ResetPasswordEmailViewModel

@{
    ViewData["Title"] = "ResetPasswordEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Şifre Sıfırlama</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="fa fa-user-o"></span>
                    </div>
                    <form method="post" class="login-form">
                        <div class="form-group">
                            <input type="email" class="form-control rounded-left" placeholder="Email Adresinizi Giriniz" name="Email">
                        </div>
                        <div class="form-group text-center">
                            <span class="text-danger">@TempData["Message"]</span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Gönder</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

