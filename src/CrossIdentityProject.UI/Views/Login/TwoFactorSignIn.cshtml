@using CrossIdentityProject.UI.Models.IdentityViewModels
@model TwoFactorLoginViewModel

@{
    ViewData["Title"] = "TwoFactorSignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Hesap Doğrulama</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="fa fa-user-o"></span>
                    </div>
                    <h3 class="text-center mb-4 font-weight-bold">İki Faktörlü Doğrulama</h3>
                    <form method="post" id="myForm" class="login-form">
                        <div class="form-group">
                            <input type="hidden" class="form-control rounded-left" value="@TempData["Username"]" asp-for="Username">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control rounded-left" asp-for="Token" placeholder="Doğrulama Kodunuzu Giriniz">
                        </div>
                        <div class="form-group text-center">
                            <span class="text-danger">@TempData["ErrorMessage"]</span>
                        </div>                       
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Giriş Yap</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

